{
  "name": "dbmongo-js",
  "version": "1.0.0",
  "description": "Functions that are involved in map-reduce operations to process data on MongoDB.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "ava",
    "test:update-snapshots": "SKIP_PRIVATE=true ava --update-snapshots",
    "test:update-golden-files": "ava -- --update",
    "test:update-all": "ava --update-snapshots -- --update",
    "test:coverage": "TS_NODE_FILES=true nyc npm test"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "ava": "^3.12.0",
    "concordance": "^5.0.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mongodb-json-schema-to-typescript": "^9.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "ava": {
    "files": [
      "**/*_tests.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
